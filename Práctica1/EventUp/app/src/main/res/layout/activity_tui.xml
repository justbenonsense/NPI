<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".Tui">


    <android.widget.Toolbar
        android:id="@+id/toolbar_tui"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginBottom="115dp"
        android:background="@color/nice_blue"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_back_tui"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/nice_blue"
                android:src="@drawable/ic_back_white"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_tui"
                app:layout_constraintEnd_toEndOf="@+id/toolbar_tui"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.494" />

            <TextView
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Tarjeta Universitaria Inteligente"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="25dp" />

            <ImageView
                android:id="@+id/texto_codigo_tui"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:src="@drawable/qrcode" />

        </LinearLayout>

    </android.widget.Toolbar>

    <ImageView
        android:id="@+id/imagen_tui"
        android:layout_width="351dp"
        android:layout_height="387dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/tuireal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tui"
        app:layout_constraintVertical_bias="0.358" />

    <TextView
        android:id="@+id/texto_nombre_tui"
        style="@style/Base.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUCÍA SÁNCHEZ GÓMEZ"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_tui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagen_tui"
        app:layout_constraintVertical_bias="0.641" />

    <TextView
        android:id="@+id/texto_rol_tui"
        style="@style/Base.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTUDIANTE"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_tui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_nombre_tui"
        app:layout_constraintVertical_bias="0.082" />

    <ImageView
        android:id="@+id/foto_tui"
        android:layout_width="117dp"
        android:layout_height="105dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ejemplopersona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagen_tui"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagen_tui"
        app:layout_constraintVertical_bias="0.639" />


</androidx.constraintlayout.widget.ConstraintLayout>